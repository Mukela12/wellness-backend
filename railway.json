{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "numReplicas": 1,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "network": {
    "egress": [
      {
        "host": "smtp.gmail.com",
        "protocol": "tcp",
        "ports": [25, 465, 587]
      },
      {
        "host": "*.gmail.com",
        "protocol": "tcp",
        "ports": [25, 465, 587]
      }
    ]
  }
}